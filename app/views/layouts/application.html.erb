<!DOCTYPE html>
<html>
<head>
  <title>FoodEase</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.js' %>
  <%= stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.css" %>

  <%= csrf_meta_tags %>
</head>

<body>

  <nav class="navbar navbar-default">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">FoodEase</a>
      </div>

  		<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
    		<ul class="nav navbar-nav">
      		<li><a href="/restaurants">Restaurants</a></li>
      		<% if session[:user_id] %>
            <li><a href="/wall">Your Wall</a></li>
          <% end %>
      		<li><a href="#">Recommend-o-matic</a></li>

		      <form class="navbar-form navbar-left" role="search", action = "/restaurants">
    		    <div class="form-group">
        		  <input type="text" class="form-control" placeholder="Search Restaurants" 
        		  name="keyword">
        		</div>
        		<button type="submit" class="btn btn-default">Submit</button>
      		</form>

          <% if session[:user_id] %>
          <li><p class="navbar-text"><%= User.find(session[:user_id]).email %></p></li>

          <% end %>
    		</ul>


    		<ul class="nav navbar-nav navbar-right">
          <% if session[:user_id] %>
            <li><a href="/profile">My Account</a></li>
            <li><a href="/logout">Sign Out</a></li>
          <% else %>
      		  <li><a href="/users/new">Sign Up</a></li>
      		  <li><a href="/sessions/new">Login</a></li>
          <% end %>

    		</ul>
  		</div>
    </div>
  </nav>

  <div class="container">
		
    <% if notice.present? %>
      <div class="alert alert-success">
        <%= notice %>
      </div>
    <% end %>

		<%= yield %>

	</div>

</body>

</html>
