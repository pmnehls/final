<div class="page-header">
  <h1>Log in</h1>
</div>

<% if @session.errors.any? %>
  <ul class="list-unstyled text-danger">
    <% @user.errors.full_messages.each do |msg| %>
      <li><strong><%= msg %></strong></li>
    <% end %>
  </ul>
<% end %>

<%= form_tag "/sessions" do %>

  <p>
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </p>

  <p>
    <%= label_tag :password %>
    <%= text_field_tag :password %>
  </p>

  <%= submit_tag "Log in" %>
<% end %>