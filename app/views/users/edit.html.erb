<div class="page-header">
  <h1>Edit Your Info</h1>
</div>

<% if @user.errors.any? %>
  <ul class="list-unstyled text-danger">
    <% @user.errors.full_messages.each do |msg| %>
      <li><strong><%= msg %></strong></li>
    <% end %>
  </ul>
<% end %>

<%= form_tag "/users/#{@user.id}", :method => "patch"  do %>

  <div>
    <%= label_tag :username %>
    <%= text_field_tag :username, @user.username %>
  </div>

  <div>
    <%= label_tag :email %>
    <%= text_field_tag :email, @user.email %>
  </div>

  <div>
    <%= label_tag :image_url, "Link to Wall Profile Image" %>
    <%= text_field_tag :image_url, @user.image_url %>

  <div><%= submit_tag "Confirm Changes" %></div>


<% end %>